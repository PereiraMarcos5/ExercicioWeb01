
@{
    Layout = "~/Views/Shared/Master.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="mr-3 ml-3">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Matricula</th>
                    <th>Nota 1</th>
                    <th>Nota 2</th>
                    <th>Nota 3</th>
                    <th>Frequência</th>

                </tr>
            </thead>
            <tbody>
                @foreach (ExercicioWeb01.Models.Alunos alunos in @ViewBag.Alunos)
                {
                <tr>
                    <td>alunos.Id</td>
                    <td>alunos.Nome</td>
                    <td>alunos.Matricula</td>
                    <td>alunos.Nota1</td>
                    <td>alunos.Nota2</td>
                    <td>alunos.Nota3</td>
                    <td>alunos.Frequencia</td>
                    <td><a href="/Alunos/Editar?id=@alunos" class="btn btn-outline-success"
                            <a href="/Alunos/Editar?id=@alunos">Editar</a>
                                <a href="/Alunos/Excluir?id=@alunos" class="btn btn-outline-danger"
                            <a href="/Alunos/Excluir?id=@recrutadora.Id">Excluir</a></td>
                </tr>
                }
            </tbody>
            </table>
            </div>
</body>
</html>
